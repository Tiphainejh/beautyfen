{% extends "masterPage.twig" %}
 
{% block content %}
<body class="animsition">

	<!-- Title Page -->
	<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(/assets/images/baniere5.jpg);">
	<h2 class="l-text2 t-center" style="text-shadow: -1px -1px 0 #f4a2b0, 1px -1px 0 #efefef, -1px 1px 0 #efefef, 1px 1px 0 #efefef;">
			Panier
		</h2>
	</section>

	{% if products %}
	<!-- Cart -->
	<section class="cart bgwhite p-t-70 p-b-100">
		<div class="container" id="container">
			<!-- Cart item -->
			<div class="container-table-cart pos-relative">
				<div class="wrap-table-shopping-cart bgwhite">
					<table class="table-shopping-cart" >
						<tr class="table-head">
							<th class="column-1"></th>
							<th class="column-2">Produit</th>
							<th class="column-3">Prix</th>
							<th class="column-4">Quantité</th>
							<th class="column-5">Total</th>
						</tr>
					{%for p in products %}
						<tr id="row{{p.product.id}}" class="table-row">
							<td class="column-1">
								<div class="cart-img-product b-rad-4 o-f-hidden">
									<img src="/assets/images/products/{{p.product.type|lower}}/{{p.product.type|lower}}{{p.product.id}}.jpg" alt="{{p.name}}">
								</div>
							</td>
							<td class="column-2">{{p.product.name}} &mdash; <strong>{{p.product.brand}}</strong></td>
							<td id="value{{p.product.id}}" class="column-3">{{p.product.price}}&euro;</td>
							<td class="column-4">
								<div class="flex-w  of-hidden w-size17">
									<button  onclick="removequantity({{p.product.id}})" class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
										<i class="fs-12 fa fa-minus" aria-hidden="true"></i>
									</button>

									<input id="quantity{{p.product.id}}" class="size8 m-text18 t-center num-product" type="number" name="num-product1" value="{{p.quantity}}">

									<button onclick="addquantity({{p.product.id}})"class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
										<i class="fs-12 fa fa-plus" aria-hidden="true"></i>
									</button>
								</div>
							</td>
							<td id="total{{p.product.id}}" class="column-5">{{p.quantity*p.product.price}}&euro;</td>
						</tr>
					{%endfor%}
					</table>
				</div>
			</div>

			<!-- Modal -->
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      
			      <div class="modal-header">
			        <h5 class="modal-title" id="exampleModalLabel">Suppression de l'article</h5>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			          <span aria-hidden="true">&times;</span>
			        </button>
			      </div>
			     
			      <div class="modal-body">
		        	Votre article est sur le point d'être supprimé de votre panier.
		        	<br> Etes vous sur de votre choix?
			      </div>
			      
			      <div class="modal-footer">
			        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
			        <button id="delete" type="button" class="btn btn-primary">Oui, supprimer cet article de mon panier</button>
			      </div>
			    
			    </div>
			  </div>
			</div>



			<!-- Total -->
			<div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
				<h5 class="m-text20 p-b-24">
					Total du panier
				</h5>

				<div class="flex-w flex-sb-m p-t-26 p-b-30">
					<span class="m-text22 w-size19 w-full-sm">
						Total:
					</span>

					<span id="total_cart" class="m-text21 w-size20 w-full-sm">
						{{total_amount}}&euro;
					</span>
				</div>

				<div class="size15 trans-0-4">
					<!-- Button -->
					<a href="/orderpaid" >
						<button type="button" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
						Valider ma commande
						</button>
					</a>
				</div>
			</div>
		</div>
	</section>
	{%else%}
	<div class="container-sign p-t-55 p-b-65">
		<div class="sign-link p-b-15 t-center">
			Votre panier est vide !
		</div>
	</div>
	{% endif %}
	
<script>

function addquantity(val)
{
	 
	var total = document.getElementById("total"+val);
	var total_cart = document.getElementById("total_cart");
	var value = document.getElementById("value"+val).innerHTML;
	var new_total = parseFloat(value,10) + parseFloat(total.innerHTML,10);
	var new_total_cart = parseFloat(value,10) + parseFloat(total_cart.innerHTML,10);
	
	$.ajax({
		type: 'POST',
		url: "/cart",
		data: {
			id : val,
			method : "addquantity"		
		},
		success: function(result){
			total_cart.innerHTML = new_total_cart+"€";
			total.innerHTML = new_total+"€";
		}
	});
}

function removequantity(val)
{
	 
	var total = document.getElementById("total"+val);
	var total_cart = document.getElementById("total_cart");
	var value = document.getElementById("value"+val).innerHTML;
	var quantity = document.getElementById("quantity"+val).value;

	var new_total = parseFloat(total.innerHTML,10) - parseFloat(value,10);
	var new_total_cart = parseFloat(total_cart.innerHTML,10) - parseFloat(value,10);
	
	//si la quantité de l'article est > 1
	if(quantity > 1)
	{
		$.ajax({
			type: 'POST',
			url: "/cart",
			data: {
				id : val,
				method : "removequantity"		
			},
			success: function(result){
				total_cart.innerHTML = new_total_cart+"€";
				total.innerHTML = new_total+"€";
			}
		});
	}
	//sinon on le supprime
	else
	{
		$('#myModal').modal('show'); 
		
		var del = document.getElementById("delete")
		var nbcart = '{{ nbcart|e("js")}}';

		del.onclick = function(){
			$.ajax({
			type: 'POST',
			url: "/cart",
			data: {
				id : val,
				method : "delete"		
			},
			success: function(result){
				$('#myModal').modal('hide'); 
				
				//si il y a dautres articles dans le panier
				if(nbcart>1)
				{
					var row = document.getElementById("row"+val);
					row.remove();
					nbcart--;
				}
				
				//sinon on supprime le panier
				else
				{
					var row = document.getElementById("container");
					row.innerHTML="<div class=\"sign-link p-b-15 t-center\">Votre panier est vide !</div>";
				}

			}
		});
			
		};


	}
}
</script>

{% endblock %}
